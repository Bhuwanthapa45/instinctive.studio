generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera {
  id        Int        @id @default(autoincrement())
  name      String
  location  String
  incidents Incident[] // One-to-many: one camera has many incidents
}

model Incident {
  id           Int      @id @default(autoincrement())
  cameraId     Int
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  resolved     Boolean  @default(false)

  // Relationships
  camera       Camera   @relation(fields: [cameraId], references: [id])

  @@index([cameraId]) // improves query performance on cameraId
}
